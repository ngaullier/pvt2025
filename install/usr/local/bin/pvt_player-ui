#! /usr/bin/env bash

# shellcheck disable=SC2164
cd "$( dirname "${BASH_SOURCE[0]}" )"

# shellcheck disable=SC2154
on_button_play_clicked() {
    pvt_player "$file1" "$file2" "$file3"
}

if [[ $# == 3 ]]; then
    export file1="$1"
    export file2="$2"
    export file3="$3"
fi

gtk-wrap -f "/usr/local/share/glade/pvt_player-ui.glade" -i /tmp/pipein |
while read -r line; do
    eval "$line"
done
